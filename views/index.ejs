<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Panel de Atletas | Frutotos</title>
    <link rel="icon" type="image/png" href="/images/logo.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                fontFamily: {
                    sans: ['Poppins', 'sans-serif'],
                },
                extend: {
                    colors: {
                        frutotos: {
                            green: '#4CAF50',
                            dark: '#2E7D32',
                            light: '#E8F5E9'
                        }
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-gray-50 font-sans h-screen flex overflow-hidden">

    <!-- Sidebar -->
    <%- include('partials/sidebar', { path: '/' }) %>

        <!-- Main Content -->
        <main class="flex-1 overflow-y-auto relative z-0">
            <!-- Top Sticky Header for Mobile/Context -->
            <header
                class="bg-white/90 backdrop-blur-md sticky top-0 z-40 border-b border-gray-100 px-8 py-4 flex justify-between items-center md:hidden">
                <span class="font-bold text-gray-800">Frutotos Admin</span>
                <button id="mobile-menu-btn" class="text-gray-500 hover:text-green-600 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </header>

            <div class="max-w-6xl mx-auto px-6 py-10">

                <div class="flex justify-between items-center mb-8">
                    <div>
                        <h1 class="text-2xl font-bold text-gray-800">Gesti√≥n de Cupones</h1>
                        <p class="text-gray-500 text-sm">Administra tus embajadores y crea nuevos c√≥digos.</p>
                    </div>
                    <div class="flex gap-3">
                        <a href="/sync"
                            class="group flex items-center gap-2 px-4 py-2 bg-indigo-50 text-indigo-700 rounded-lg hover:bg-indigo-100 transition duration-200 font-medium border border-indigo-200">
                            <span class="group-hover:rotate-180 transition-transform duration-500 text-xl">üîÑ</span>
                            <span class="hidden sm:inline">Sincronizar</span>
                        </a>
                    </div>
                </div>

                <!-- Create Card -->
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden mb-10 border border-gray-100">
                    <div class="bg-gradient-to-r from-green-600 to-teal-600 px-8 py-5">
                        <h2 class="text-white text-lg font-bold flex items-center gap-2">
                            <span>‚ú®</span> Registrar Nuevo Atleta
                        </h2>
                    </div>

                    <form action="/create-affiliate" method="POST" class="p-8">
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                            <div class="col-span-1">
                                <label class="block text-gray-700 text-sm font-bold mb-2">Nombre Completo</label>
                                <input type="text" name="name" placeholder="Ej: Juan P√©rez"
                                    class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-green-500 focus:ring-2 focus:ring-green-100 focus:outline-none transition"
                                    required>
                            </div>
                            <div class="col-span-1">
                                <label class="block text-gray-700 text-sm font-bold mb-2">Correo Electr√≥nico</label>
                                <input type="email" name="email" placeholder="juan@ejemplo.com"
                                    class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-green-500 focus:ring-2 focus:ring-green-100 focus:outline-none transition"
                                    required>
                            </div>
                            <div class="col-span-1">
                                <label class="block text-gray-700 text-sm font-bold mb-2">C√≥digo Descuento</label>
                                <div class="relative">
                                    <span class="absolute left-4 top-3 text-gray-400 font-bold">#</span>
                                    <input type="text" name="code" placeholder="JUAN10"
                                        class="w-full pl-8 pr-4 py-3 rounded-lg border border-gray-200 focus:border-green-500 focus:ring-2 focus:ring-green-100 focus:outline-none transition font-bold uppercase tracking-wide text-green-700"
                                        required>
                                </div>
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                            <div>
                                <label class="block text-gray-700 text-sm font-bold mb-2">% Descuento Cliente</label>
                                <div class="relative">
                                    <input type="number" name="discount" placeholder="10"
                                        class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-green-500 focus:ring-2 focus:ring-green-100 focus:outline-none transition"
                                        required>
                                    <span class="absolute right-4 top-3 text-gray-400 font-bold">%</span>
                                </div>
                            </div>
                            <div>
                                <label class="block text-gray-700 text-sm font-bold mb-2">% Comisi√≥n Atleta</label>
                                <div class="relative">
                                    <input type="number" name="commission" placeholder="10"
                                        class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-green-500 focus:ring-2 focus:ring-green-100 focus:outline-none transition"
                                        required>
                                    <span class="absolute right-4 top-3 text-gray-400 font-bold">%</span>
                                </div>
                            </div>
                        </div>

                        <div class="flex justify-end">
                            <button type="submit"
                                class="bg-gray-900 text-white px-8 py-3 rounded-lg hover:bg-black font-bold shadow-lg transform transition hover:-translate-y-1 flex items-center gap-2">
                                <span>üöÄ</span> Generar Cup√≥n & Registrar
                            </button>
                        </div>
                    </form>
                </div>

                <!-- List Card -->
                <h3 class="text-xl font-bold text-gray-800 mb-6 flex items-center gap-2">
                    <span class="bg-green-100 text-green-700 p-2 rounded-lg text-sm">üë•</span>
                    Listado de Atletas
                </h3>

                <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="w-full text-left border-collapse">
                            <thead>
                                <tr class="bg-gray-50 border-b border-gray-200">
                                    <th class="py-4 px-6 text-xs font-bold text-gray-500 uppercase tracking-wider">
                                        Atleta</th>
                                    <th class="py-4 px-6 text-xs font-bold text-gray-500 uppercase tracking-wider">
                                        C√≥digo</th>
                                    <th
                                        class="py-4 px-6 text-center text-xs font-bold text-gray-500 uppercase tracking-wider">
                                        Descuento</th>
                                    <th
                                        class="py-4 px-6 text-center text-xs font-bold text-gray-500 uppercase tracking-wider">
                                        Comisi√≥n</th>
                                    <th
                                        class="py-4 px-6 text-center text-xs font-bold text-gray-500 uppercase tracking-wider">
                                        Estado</th>
                                    <th
                                        class="py-4 px-6 text-center text-xs font-bold text-gray-500 uppercase tracking-wider">
                                        Acciones</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100">
                                <% affiliates.forEach(function(atleta) { %>
                                    <tr class="hover:bg-green-50/50 transition duration-150">
                                        <td class="py-4 px-6 font-medium text-gray-900">
                                            <%= atleta.name %>
                                                <div class="text-xs text-gray-400 font-normal">
                                                    <%= atleta.email %>
                                                </div>
                                        </td>
                                        <td class="py-4 px-6">
                                            <span
                                                class="bg-gray-100 text-gray-700 px-3 py-1 rounded-md font-mono font-bold text-sm border border-gray-200">
                                                <%= atleta.shopify_code %>
                                            </span>
                                        </td>
                                        <td class="py-4 px-6 text-center text-gray-600">
                                            <%= atleta.discount_percent %>%
                                        </td>
                                        <td class="py-4 px-6 text-center font-bold text-green-600">
                                            <%= atleta.commission_percent %>%
                                        </td>
                                        <td class="py-4 px-6 text-center">
                                            <span
                                                class="px-3 py-1 rounded-full text-xs font-semibold uppercase tracking-wide <%= atleta.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                                <%= atleta.status %>
                                            </span>
                                        </td>
                                        <td class="py-4 px-6 text-center">
                                            <form action="/delete/<%= atleta.id %>" method="POST"
                                                onsubmit="return confirm('‚ö†Ô∏è ¬øEliminar permanentemente a <%= atleta.name %>? Esto tambi√©n borrar√° el cup√≥n en Shopify.');">
                                                <button type="submit"
                                                    class="text-gray-400 hover:text-red-500 transition p-2 rounded-full hover:bg-red-50"
                                                    title="Eliminar">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                                        viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                    </svg>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>

        <!-- Mobile Overlay -->
        <div id="sidebar-overlay"
            class="fixed inset-0 bg-black/50 z-40 hidden backdrop-blur-sm transition-opacity opacity-0"></div>

        <script>
            const sidebar = document.getElementById('sidebar');
            const mobileMenuBtn = document.getElementById('mobile-menu-btn');
            const sidebarCloseBtn = document.getElementById('sidebar-close');
            const overlay = document.getElementById('sidebar-overlay');

            function openSidebar() {
                sidebar.classList.remove('-translate-x-full');
                overlay.classList.remove('hidden');
                setTimeout(() => {
                    overlay.classList.remove('opacity-0');
                }, 10);
            }

            function closeSidebar() {
                sidebar.classList.add('-translate-x-full');
                overlay.classList.add('opacity-0');
                setTimeout(() => {
                    overlay.classList.add('hidden');
                }, 300);
            }

            mobileMenuBtn.addEventListener('click', openSidebar);
            sidebarCloseBtn.addEventListener('click', closeSidebar);
            overlay.addEventListener('click', closeSidebar);
        </script>
</body>

</html>