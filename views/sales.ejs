<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Reporte de Ventas | Frutotos</title>
    <link rel="icon" type="image/png" href="/images/logo.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                fontFamily: {
                    sans: ['Poppins', 'sans-serif'],
                }
            }
        }
    </script>
</head>

<body class="bg-gray-50 font-sans h-screen flex overflow-hidden">

    <!-- Sidebar -->
    <%- include('partials/sidebar', { path: '/sales' }) %>

        <!-- Main Content -->
        <main class="flex-1 overflow-y-auto relative z-0">
            <!-- Top Sticky Header for Mobile/Context -->
            <header
                class="bg-white/90 backdrop-blur-md sticky top-0 z-40 border-b border-gray-100 px-8 py-4 flex justify-between items-center md:hidden">
                <span class="font-bold text-gray-800">Frutotos Admin</span>
                <button id="mobile-menu-btn" class="text-gray-500 hover:text-green-600 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </header>
            <div class="max-w-7xl mx-auto px-8 py-10">

                <!-- Header -->
                <div class="mb-8 flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-800 tracking-tight">Reporte de Ventas</h1>
                        <p class="text-green-600 font-medium">Transacciones canalizadas desde Shopify</p>
                    </div>
                    <div class="flex gap-3">
                        <a href="/sync?returnTo=/sales"
                            class="group flex items-center gap-2 px-4 py-2 bg-indigo-50 text-indigo-700 rounded-lg hover:bg-indigo-100 transition duration-200 font-medium border border-indigo-200 shadow-sm">
                            <span class="group-hover:rotate-180 transition-transform duration-500 text-xl"></span>
                            <span class="hidden sm:inline">Sincronizar</span>
                        </a>
                    </div>
                </div>

                <!-- Filters -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-8">
                    <form action="/sales" method="GET" class="flex flex-wrap items-end gap-4">
                        <div class="flex-1 min-w-[200px]">
                            <label class="block text-gray-700 text-xs font-bold mb-2 uppercase tracking-wide">Fecha
                                Inicio</label>
                            <input type="date" name="start" value="<%= startDate %>"
                                class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:border-green-500 focus:outline-none transition bg-gray-50">
                        </div>
                        <div class="flex-1 min-w-[200px]">
                            <label class="block text-gray-700 text-xs font-bold mb-2 uppercase tracking-wide">Fecha
                                Fin</label>
                            <input type="date" name="end" value="<%= endDate %>"
                                class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:border-green-500 focus:outline-none transition bg-gray-50">
                        </div>
                        <button type="submit"
                            class="bg-green-600 text-white px-6 py-2.5 rounded-lg hover:bg-green-700 font-bold shadow transition flex items-center gap-2">
                            <span></span> Filtrar
                        </button>
                        <% if (startDate || endDate) { %>
                            <a href="/sales"
                                class="text-gray-500 underline text-sm hover:text-red-500 transition">Limpiar
                                filtros</a>
                            <% } %>
                    </form>
                </div>

                <!-- Stats Cards -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                    <div class="bg-gradient-to-br from-green-500 to-teal-600 rounded-2xl p-6 text-white shadow-lg">
                        <div class="text-green-100 text-sm font-medium uppercase tracking-wider mb-1">Ventas Totales
                        </div>
                        <div class="text-4xl font-bold">$<%= new Intl.NumberFormat('es-CL').format(totalSales) %>
                        </div>
                        <div class="mt-2 text-green-100 text-xs bg-white/20 inline-block px-2 py-1 rounded">En el
                            periodo seleccionado</div>
                    </div>
                    <div class="bg-white rounded-2xl p-6 border border-gray-100 shadow-sm">
                        <div class="text-gray-400 text-sm font-medium uppercase tracking-wider mb-1">Transacciones</div>
                        <div class="text-4xl font-bold text-gray-800">
                            <%= sales.length %>
                        </div>
                        <div class="mt-2 text-green-600 text-xs">Ordenes procesadas</div>
                    </div>
                    <div class="bg-white rounded-2xl p-6 border border-gray-100 shadow-sm">
                        <div class="text-gray-400 text-sm font-medium uppercase tracking-wider mb-1">Ticket Promedio
                        </div>
                        <div class="text-4xl font-bold text-gray-800">
                            $<%= sales.length> 0 ? new Intl.NumberFormat('es-CL').format(Math.round(totalSales /
                                sales.length)) : 0 %>
                        </div>
                        <div class="mt-2 text-green-600 text-xs">Por venta</div>
                    </div>
                </div>

                <!-- Coupon Stats Table -->
                <div class="mb-10">
                    <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
                        <span class="bg-indigo-100 text-indigo-700 p-2 rounded-lg text-sm"></span>
                        Resumen de Comisiones por Cup贸n
                    </h3>
                    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
                        <table class="w-full text-left border-collapse">
                            <thead>
                                <tr class="bg-indigo-50 border-b border-indigo-100">
                                    <th class="py-4 px-6 text-xs font-bold text-indigo-800 uppercase tracking-wider">
                                        Cup贸n</th>
                                    <th
                                        class="py-4 px-6 text-center text-xs font-bold text-indigo-800 uppercase tracking-wider">
                                        Ventas Generadas</th>
                                    <th
                                        class="py-4 px-6 text-right text-xs font-bold text-indigo-800 uppercase tracking-wider">
                                        Total Vendido</th>
                                    <th
                                        class="py-4 px-6 text-right text-xs font-bold text-indigo-800 uppercase tracking-wider">
                                        Comisi贸n a Pagar</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100">
                                <% if (typeof couponStats !=='undefined' && couponStats.length> 0) { %>
                                    <% couponStats.forEach(function(stat) { %>
                                        <tr class="hover:bg-indigo-50/30 transition">
                                            <td
                                                class="py-4 px-6 font-mono font-bold text-indigo-600 border-l-4 border-transparent hover:border-indigo-500">
                                                <%= stat.code %>
                                            </td>
                                            <td class="py-4 px-6 text-center text-gray-700 font-medium">
                                                <%= stat.count %>
                                            </td>
                                            <td class="py-4 px-6 text-right font-bold text-gray-800">
                                                $<%= new Intl.NumberFormat('es-CL').format(stat.totalSales) %>
                                            </td>
                                            <td class="py-4 px-6 text-right font-bold text-green-600 bg-green-50/50">
                                                $<%= new Intl.NumberFormat('es-CL').format(stat.totalCommission) %>
                                            </td>
                                        </tr>
                                        <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="4" class="py-6 text-center text-gray-400 italic">No hay
                                                        ventas con cup贸n en este periodo.</td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Table -->
                <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="w-full text-left border-collapse">
                            <thead>
                                <tr class="bg-gray-50 border-b border-gray-200">
                                    <th class="py-4 px-6 text-xs font-bold text-gray-500 uppercase tracking-wider">Orden
                                    </th>
                                    <th class="py-4 px-6 text-xs font-bold text-gray-500 uppercase tracking-wider">Fecha
                                    </th>
                                    <th class="py-4 px-6 text-xs font-bold text-gray-500 uppercase tracking-wider">
                                        Cliente</th>
                                    <th class="py-4 px-6 text-xs font-bold text-gray-500 uppercase tracking-wider">Cup贸n
                                        Usado</th>
                                    <th
                                        class="py-4 px-6 text-right text-xs font-bold text-gray-500 uppercase tracking-wider">
                                        Total Venta</th>
                                    <th
                                        class="py-4 px-6 text-right text-xs font-bold text-gray-500 uppercase tracking-wider">
                                        Comisi贸n (Est.)</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100">
                                <% sales.forEach(function(sale) { %>
                                    <tr class="hover:bg-green-50/50 transition duration-150">
                                        <td class="py-4 px-6 font-mono font-bold text-green-700">
                                            <a href="#" class="hover:underline">
                                                <%= sale.order_number %>
                                            </a>
                                        </td>
                                        <td class="py-4 px-6 text-gray-600 text-sm">
                                            <%= new Date(sale.created_at).toLocaleDateString('es-CL') %>
                                                <span class="text-xs text-gray-400 block">
                                                    <%= new Date(sale.created_at).toLocaleTimeString('es-CL',
                                                        {hour: '2-digit' , minute:'2-digit'}) %>
                                                </span>
                                        </td>
                                        <td class="py-4 px-6 font-medium text-gray-800">
                                            <%= sale.customer %>
                                        </td>
                                        <td class="py-4 px-6">
                                            <% if (sale.discount_code) { %>
                                                <span
                                                    class="bg-orange-100 text-orange-800 px-2 py-1 rounded text-xs font-bold border border-orange-200">
                                                    <%= sale.discount_code %>
                                                </span>
                                                <% } else { %>
                                                    <span class="text-gray-400 text-xs">-</span>
                                                    <% } %>
                                        </td>
                                        <td class="py-4 px-6 text-right font-bold text-gray-900">
                                            $<%= new Intl.NumberFormat('es-CL').format(sale.total_price) %>
                                        </td>
                                        <td class="py-4 px-6 text-right font-bold text-green-600">
                                            $<%= new Intl.NumberFormat('es-CL').format(sale.commission) %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% if (sales.length===0) { %>
                                            <tr>
                                                <td colspan="6" class="py-10 text-center text-gray-400 italic">
                                                    No se encontraron ventas en este periodo.
                                                </td>
                                            </tr>
                                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </main>

        <!-- Mobile Overlay -->
        <div id="sidebar-overlay"
            class="fixed inset-0 bg-black/50 z-40 hidden backdrop-blur-sm transition-opacity opacity-0"></div>

        <script>
            const sidebar = document.getElementById('sidebar');
            const mobileMenuBtn = document.getElementById('mobile-menu-btn');
            const sidebarCloseBtn = document.getElementById('sidebar-close');
            const overlay = document.getElementById('sidebar-overlay');

            function openSidebar() {
                sidebar.classList.remove('-translate-x-full');
                overlay.classList.remove('hidden');
                setTimeout(() => {
                    overlay.classList.remove('opacity-0');
                }, 10);
            }

            function closeSidebar() {
                sidebar.classList.add('-translate-x-full');
                overlay.classList.add('opacity-0');
                setTimeout(() => {
                    overlay.classList.add('hidden');
                }, 300);
            }

            mobileMenuBtn.addEventListener('click', openSidebar);
            sidebarCloseBtn.addEventListener('click', closeSidebar);
            overlay.addEventListener('click', closeSidebar);
        </script>
</body>

</html>